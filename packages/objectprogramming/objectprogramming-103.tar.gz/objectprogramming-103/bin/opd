#!/usr/bin/env python3
# This file is placed in the Public Domain.
# pylint: disable=C0115,C0116,C0413,R1732


"daemon"


import os
import sys


from op import Wd, scan, wait


from opm import cmds, irc, rss
from opm.irc import Config


Config.nick = "opd"
Config.channel = "#opd"
Config.realname = "object programming daemon"
Config.username = "opd"


Wd.workdir = os.path.expanduser("~/.objectprogramming")


def daemon():
    pid = os.fork()
    if pid != 0:
        os._exit(0)
    os.setsid()
    os.umask(0)
    sis = open("/dev/null", 'r')
    os.dup2(sis.fileno(), sys.stdin.fileno())
    if SILENT:
        sos = open("/dev/null", 'a+')
        ses = open("/dev/null", 'a+')
        os.dup2(sos.fileno(), sys.stdout.fileno())
        os.dup2(ses.fileno(), sys.stderr.fileno())


scan(cmds)
scan(irc)
scan(rss)


def main():
    sys.argv[0] = "opd"
    daemon()
    irc.init()
    rss.init()
    wait()


main()
