{
  "$id": "Metadata.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema",
  "additionalProperties": false,
  "definitions": {
    "format": {
      "defaul": "Comic",
      "enum": [
        "Comic",
        "Digital Chapter",
        "Annual",
        "Trade Paperback",
        "Hardcover",
        "Graphic Novel"
      ],
      "type": "string"
    },
    "genre": {
      "default": "Other",
      "enum": [
        "Adult",
        "Crime",
        "Espionage",
        "Fantasy",
        "Historical",
        "Horror",
        "Humor",
        "Manga",
        "Parody",
        "Romance",
        "Science Fiction",
        "Sport",
        "Super-Hero",
        "War",
        "Western",
        "Other"
      ],
      "type": "string"
    },
    "pageType": {
      "default": "Story",
      "enum": [
        "Front Cover",
        "Inner Cover",
        "Roundup",
        "Story",
        "Advertisement",
        "Editorial",
        "Letters",
        "Preview",
        "Back Cover",
        "Other"
      ],
      "type": "string"
    },
    "resources": {
      "items": {
        "additionalProperties": false,
        "properties": {
          "source": {
            "$ref": "#/definitions/source"
          },
          "value": {
            "minimum": 1,
            "type": "integer"
          }
        },
        "required": [
          "source",
          "value"
        ],
        "type": "object"
      },
      "type": "array",
      "uniqueItems": true
    },
    "role": {
      "default": "Other",
      "enum": [
        "Writer",
        "Story",
        "Artist",
        "Penciller",
        "Inker",
        "Colourist",
        "Letterer",
        "Designer",
        "Cover Artist",
        "Variant Cover Artist",
        "Editor",
        "Assistant Editor",
        "Associate Editor",
        "Consulting Editor",
        "Senior Editor",
        "Group Editor",
        "Executive Editor",
        "Editor in Chief",
        "Creator",
        "Translator",
        "Other"
      ],
      "type": "string"
    },
    "source": {
      "enum": [
        "Comicvine",
        "Grand Comics Database",
        "League of Comic Geeks",
        "Marvel",
        "Metron"
      ],
      "type": "string"
    }
  },
  "properties": {
    "content": {
      "additionalProperties": false,
      "properties": {
        "issue": {
          "additionalProperties": false,
          "properties": {
            "characters": {
              "items": {
                "type": "string"
              },
              "type": "array",
              "uniqueItems": true
            },
            "coverDate": {
              "default": null,
              "format": "date",
              "type": [
                "string",
                "null"
              ]
            },
            "creators": {
              "items": {
                "additionalProperties": false,
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "roles": {
                    "items": {
                      "$ref": "#/definitions/role"
                    },
                    "type": "array",
                    "uniqueItems": true
                  }
                },
                "required": [
                  "name"
                ],
                "type": "object"
              },
              "type": "array",
              "uniqueItems": true
            },
            "format": {
              "$ref": "#/definitions/format"
            },
            "genres": {
              "items": {
                "$ref": "#/definitions/genre"
              },
              "type": "array",
              "uniqueItems": true
            },
            "language": {
              "default": "en",
              "pattern": "[a-z]+",
              "type": "string"
            },
            "locations": {
              "items": {
                "type": "string"
              },
              "type": "array",
              "uniqueItems": true
            },
            "number": {
              "type": "string"
            },
            "pageCount": {
              "default": 1,
              "minimum": 1,
              "type": "integer"
            },
            "resources": {
              "$ref": "#/definitions/resources"
            },
            "storeDate": {
              "default": null,
              "format": "date",
              "type": [
                "string",
                "null"
              ]
            },
            "storyArcs": {
              "items": {
                "additionalProperties": false,
                "properties": {
                  "number": {
                    "default": null,
                    "type": [
                      "integer",
                      "null"
                    ]
                  },
                  "title": {
                    "type": "string"
                  }
                },
                "required": [
                  "number",
                  "title"
                ],
                "type": "object"
              },
              "type": "array",
              "uniqueItems": true
            },
            "summary": {
              "default": null,
              "type": [
                "string",
                "null"
              ]
            },
            "teams": {
              "items": {
                "type": "string"
              },
              "type": "array",
              "uniqueItems": true
            },
            "title": {
              "default": null,
              "type": [
                "string",
                "null"
              ]
            }
          },
          "required": [
            "coverDate",
            "format",
            "number",
            "resources"
          ],
          "type": "object"
        },
        "notes": {
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "pages": {
          "items": {
            "additionalProperties": false,
            "properties": {
              "bookmark": {
                "default": null,
                "type": [
                  "string",
                  "null"
                ]
              },
              "doublePage": {
                "default": false,
                "type": "boolean"
              },
              "image": {
                "minimum": 0,
                "type": "integer"
              },
              "imageHeight": {
                "default": 0,
                "minimum": 0,
                "type": "integer"
              },
              "imageSize": {
                "default": 0,
                "minimum": 0,
                "type": "integer"
              },
              "imageWidth": {
                "default": 0,
                "minimum": 0,
                "type": "integer"
              },
              "key": {
                "default": null,
                "type": [
                  "string",
                  "null"
                ]
              },
              "pageType": {
                "$ref": "#/definitions/pageType"
              }
            },
            "required": [
              "image"
            ],
            "type": "object"
          },
          "type": "array",
          "uniqueItems": true
        },
        "publisher": {
          "additionalProperties": false,
          "properties": {
            "imprint": {
              "default": null,
              "type": [
                "string",
                "null"
              ]
            },
            "resources": {
              "$ref": "#/definitions/resources"
            },
            "title": {
              "type": "string"
            }
          },
          "required": [
            "resources",
            "title"
          ],
          "type": "object"
        },
        "series": {
          "additionalProperties": false,
          "properties": {
            "resources": {
              "$ref": "#/definitions/resources"
            },
            "startYear": {
              "default": null,
              "minimum": 1900,
              "type": [
                "integer",
                "null"
              ]
            },
            "title": {
              "type": "string"
            },
            "volume": {
              "default": 1,
              "minimum": 1,
              "type": "integer"
            }
          },
          "required": [
            "resources",
            "startYear",
            "title",
            "volume"
          ],
          "type": "object"
        }
      },
      "required": [
        "publisher",
        "series",
        "issue"
      ],
      "type": "object"
    },
    "meta": {
      "additionalProperties": false,
      "properties": {
        "date": {
          "format": "date",
          "type": "string"
        },
        "tool": {
          "additionalProperties": false,
          "properties": {
            "name": {
              "type": "string"
            },
            "version": {
              "pattern": "^\\d+\\.\\d+\\.\\d+$",
              "type": "string"
            }
          },
          "required": [
            "name",
            "version"
          ],
          "type": "object"
        }
      },
      "required": [
        "date",
        "tool"
      ],
      "type": "object"
    }
  },
  "required": [
    "content",
    "meta"
  ],
  "type": "object"
}
